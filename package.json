{
  "name": "effect-best-practices",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./index.ts",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --cwd packages/website dev",
    "dev:cli": "bun --cwd packages/cli dev",
    "dev:mcp": "bun --cwd packages/mcp run dev",
    "build": "bun --filter '*' build",
    "build:website": "bun --cwd packages/website build",
    "build:cli": "bun --cwd packages/cli build",
    "build:mcp": "bun --cwd packages/mcp build",
    "generate:manifest": "bun --cwd packages/cli run generate:manifest",
    "publish:cli": "cd packages/cli && bun publish",
    "publish:mcp": "cd packages/mcp && bun publish",
    "publish:all": "bun run publish:cli && bun run publish:mcp",
    "changeset": "changeset",
    "changeset:empty": "changeset add --empty",
    "version": "changeset version && bun install",
    "release": "bun run version && git add -A && git commit -m \"chore: release packages\" && bun run build:cli && bun run build:mcp && bun run publish:all && git push",
    "lint": "biome check .",
    "format": "biome format . --write",
    "typecheck": "bunx tsc --build --force",
    "check": "bun run lint && bun run typecheck"
  },
  "dependencies": {
    "@effect/platform": "^0.93.3",
    "@next/mdx": "^16.0.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-visually-hidden": "^1.2.4",
    "cmdk": "^1.1.1",
    "effect": "^3.19.5",
    "next-mdx-remote": "^5.0.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7"
  }
}
